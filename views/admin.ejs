        // 表单提交时收集所有选中用户ID为数组
        sendMsgForm.onsubmit = async function(e) {
          e.preventDefault();
          const form = new FormData(sendMsgForm);
          let toUserIds = [];
          try {
            toUserIds = JSON.parse(multiSelectHidden.value);
          } catch { toUserIds = []; }
